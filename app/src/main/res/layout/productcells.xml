<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="@dimen/margingeneral"
    android:id="@+id/LinearLayout1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/CVproductCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/clearWhite"
        android:elevation="@dimen/cardElevation"
        card_view:cardCornerRadius="@dimen/cardCornerRadius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivProductPicture"
                android:layout_width="@dimen/imageSizeWidth"
                android:layout_height="@dimen/imageSizeHeight"
                android:layout_marginEnd="@dimen/marginEnd"
                tools:src="@color/colorPrimaryDark" />
            <TextView
                android:id="@+id/tvName"
                android:layout_width="@dimen/sizeForWeight"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="Test"
                android:layout_marginStart="@dimen/marginStart"
                android:layout_marginEnd="@dimen/marginEnd" />
            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="@dimen/imageViewSizeWidth"
                android:layout_height="@dimen/imageViewSizeHeight"
                android:layout_marginEnd="@dimen/marginEnd"
                android:src="@drawable/right" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>